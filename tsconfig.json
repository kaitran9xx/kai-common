{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "packages/lib",
    "rootDir": "packages/src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["packages/src"]
}
